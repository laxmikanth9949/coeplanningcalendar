<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" controllerName="sap.coe.planning.calendar.fragment.SortTable" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" >
    <Dialog title="{i18n>FRAGMENT_TABLE_SETTINGS_TITLE}" beforeOpen="onBeforeOpen" contentHeight="580px" verticalScrolling="false">
        <RadioButtonGroup id="sortOrderKey" selectedIndex="1">
          <buttons>
            <RadioButton id="Ascending" text="{i18n>FRAGMENT_TABLE_SETTINGS_ASCENDING}"/>
            <RadioButton id="Descending" text="{i18n>FRAGMENT_TABLE_SETTINGS_DESCENDING}"/>
          </buttons>
      </RadioButtonGroup>
        <ScrollContainer width="100%" height="465px" horizontal="false" vertical="true">
            <RadioButtonGroup id="sortItemKey" />
        </ScrollContainer>
        <buttons>
            <Button id="idForSaveButton" text="{i18n>FRAGMENT_DATERANGE_SELECTION_OK}" press="onConfirm" />
            <Button id="idForCancelButton" text="{i18n>FRAGMENT_DATERANGE_SELECTION_CANCEL}" press="onCancel" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
